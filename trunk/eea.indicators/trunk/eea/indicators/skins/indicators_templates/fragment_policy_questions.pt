<tal:def tal:define="region_name string:policy_questions_area;
	region_update_handler string:fragment_policy_questions;">

	<metal:macro metal:use-macro="context/simple_edit_macros/macros/active_region">
		<metal:slot metal:fill-slot="content">
			<tal:defs tal:define="questions python:here.objectValues('PolicyQuestion')" >

				<a href='./object_factory?type_name=PolicyQuestion' class="object_creator">+ Policy Question</a>
				<h2 class="policy_questions">Policy Questions</h2>
				<div id="policy_questions" class="sortable_spec" tal:condition="questions">
					<div tal:repeat="question questions"
						class="list-item">
						<span class="handler ui-icon ui-icon-arrowthick-2-n-s"></span>
						<a href="" 
							class="schemata_edit spec_control"
							tal:attributes="href string:${question/absolute_url}/schemata_edit?fieldset=default">Edit</a>
						<a href="" 
							class="object_delete spec_control"
							tal:attributes="href string:${question/aq_parent/absolute_url}/delete_object?id=${question/getId}">Delete</a>
						<h5 tal:content="question/Title">Question title</h5>
					</div>
				</div>

				<div tal:condition="not:questions" class="checks_alert">
					You need to have at least one Policy Question
				</div>

			</tal:defs>

		</metal:slot>
	</metal:macro>

</tal:def>
