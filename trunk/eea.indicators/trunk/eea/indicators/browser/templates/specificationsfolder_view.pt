<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
	metal:use-macro="here/main_template/macros/master"
	i18n:domain="indicators">
	<head>
		<title tal:content="context/Title"></title>
	</head>
	<body>
		<div metal:fill-slot="main">
			<h1 tal:content="context/Title">SpecFolder title</h1>

			<h2>Specifications</h2>
			<table class="listing">
				<thead>
					<tr>
						<th>CSI Code</th>
						<th>Indicator name</th>
						<th>CSI Topic</th>
						<th>CSI Status</th>
						<th>Visibility</th>
						<th>EEA Manager</th>
					</tr>
				</thead>
				<tbody>
					<tr tal:repeat="spec python:here.objectValues('Specification')">
						<td tal:define="codes spec/getCodes">
							<div tal:repeat="code codes" tal:content="string:${code/set} ${code/code}">
								CSI XXX
							</div>
						</td>
						<td><a href="" tal:attributes="href spec/absolute_url" 
													 tal:content="spec/Title">Indicator name</a></td>
						<td tal:content="spec/getCsi_topics">CSI Topics</td>
						<td tal:content="spec/getCsi_status">CSI Status</td>
						<td tal:content="python:wtool.getInfoFor(spec, 'review_state')">Status</td>
						<td>EEA Manager</td>
					</tr>
				</tbody>
			</table>
			<h2>External Data Specifications</h2>
			<table class="listing">
				<thead>
					<tr>
						<th>Title</th>
						<th>Provider</th>
					</tr>
				</thead>
				<tbody>
					<tr tal:repeat="eeadata python:here.objectValues('ExternalDataSpec')">
						<td><a href="" tal:attributes="href eeadata/absolute_url" tal:content="eeadata/Title">Title</a></td>
						<td tal:content="eeadata/getProvider_name">Provider name</td>
					</tr>
				</tbody>
			</table>
			<h2>Policy Documents References</h2>
			<table class="listing">
				<thead>
					<tr>
						<th>Title</th>
						<th>Provider</th>
					</tr>
				</thead>
				<tbody>
					<tr tal:repeat="doc python:here.objectValues('PolicyDocumentReference')">
						<td><a href="" tal:attributes="href doc/absolute_url" tal:content="doc/Title">Title</a></td>
						<td tal:content="doc/getRemoteUrl">Document name</td>
					</tr>
				</tbody>
			</table>
		</div>
	</body>
</html>
