<tal:defs 
	tal:define="region_name string:data_specifications;
	region_update_handler string:fragment_data_specifications;
	submit_handler string:simple_edit;
	imsutils nocall:context/@@indicator_utils;
	related context/getRelatedItems; specs context/getSpecification_data;
	tooltip_macro context/indicators_macros/macros/tooltip;
	portal_url context/portal_url;">

	<metal:macro metal:use-macro="context/simple_edit_macros/macros/active_region">
		<metal:slot metal:fill-slot="content">

			<div class="logic_group">
				<h2 class="policy_questions" tal:define="tooltip string:Data specification description"><span metal:use-macro="tooltip_macro" />
					Data specifications</h2>
				<tal:def tal:define="fieldname string:relatedItems; fieldset string:DataSpecs">
					<div class="portalMessage" tal:condition="python:not (related or specs)">
						You need to reference at least one Data Spec
					</div>
					<tal:defs tal:define="fieldName string:relatedItems; 
						field python:context.schema['relatedItems'];
						value python:context.getRawRelatedItems()">
						<span metal:use-macro="here/eeareferencebrowser/macros/reference_edit" />
					</tal:defs>
					<metal:macro metal:use-macro="here/simple_edit_macros/macros/active_field">
						<metal:slot metal:fill-slot="content">
							<div tal:condition="python:not (related or specs)" class="placeholder">
								Please fill in
							</div>
							<ul tal:condition="python:(related or specs)">
								<li tal:repeat="data related">
									<a href="" tal:attributes="href data/getDataset_url" tal:content="data/Title">Dataset title</a>
									<div tal:content="structure data/Description" />
								</li>
								<li tal:repeat="data specs">
									<a href="" tal:attributes="href data/absolute_url" tal:content="data/Title">Dataset title</a>
									<div tal:content="structure data/Description" />
								</li>
							</ul>
						</metal:slot>
						<metal:slot metal:fill-slot="extra-metadata">
							<div class="width">800</div>
							<div class="height">600</div>
						</metal:slot>
					</metal:macro>
				</tal:def>



			</div>

		</metal:slot>
	</metal:macro>
</tal:defs>

