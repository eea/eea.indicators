<?xml version="1.0"?>
<dc-workflow workflow_id="specification_workflow"
             title="specification_workflow"
             state_variable="review_state"
             initial_state="draft">
 <permission>Access contents information</permission>
 <permission>View</permission>
 <permission>Modify portal content</permission>
 <state state_id="content_pending"
        title="Pending (internal review)">
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="publishEionet"/>
  <exit-transition transition_id="show"/>
  <exit-transition transition_id="publish"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
 </state>
 <state state_id="draft"
        title="First draft">
  <exit-transition transition_id="quickPublish"/>
  <exit-transition transition_id="publishEionet"/>
  <exit-transition transition_id="submitContentReview"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="published"
        title="Published">
  <exit-transition transition_id="hide"/>
  <permission-map name="Access contents information"
                  acquired="True">
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="True">
  </permission-map>
 </state>
 <state state_id="published_eionet"
        title="Published for Eionet (Circa login)">
  <exit-transition transition_id="retract"/>
  <exit-transition transition_id="publish"/>
  <permission-map name="Access contents information"
                  acquired="True">
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Authenticated</permission-role>
  </permission-map>
 </state>
 <state state_id="published_internally"
        title="Published internally (admin login)">
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>CommonEditor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>CommonEditor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
 </state>
 <state state_id="retracted"
        title="Retracted">
  <exit-transition transition_id="enable"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="True">
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="visible"
        title="Visible with direct link (hidden in listings)">
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Authenticated</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>ContentManager</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>ProofReader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>WebReviewer</permission-role>
  </permission-map>
  <permission-map name="View"
                  acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Authenticated</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <transition transition_id="enable"
             title="enable"
             new_state="draft"
             trigger="USER"
             before_script=""
             after_script="">
  <action url="" category="workflow">enable</action>
  <guard>
    <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="hide"
             title="Hide item from search and listings"
             new_state="visible"
             trigger="USER"
             before_script=""
             after_script="">
  <action url="" category="workflow">Hide item from search and listings</action>
  <guard>
    <guard-role>Owner</guard-role>
    <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="publish"
             title="Publish"
             new_state="published"
             trigger="USER"
             before_script=""
             after_script="">
  <action url="" category="workflow">Publish</action>
  <guard>
    <guard-role>WebReviewer</guard-role>
    <guard-expression>python:path('context/@@get_readiness').is_ready_for(state_change.new_state.getId())</guard-expression>
  </guard>
 </transition>
 <transition transition_id="publishEionet"
             title="Publish Eionet"
             new_state="published_eionet"
             trigger="USER"
             before_script=""
             after_script="">
  <action url="" category="workflow">Publish Eionet</action>
  <guard>
    <guard-role>Reviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="quickPublish"
             title="Publish"
             new_state="published"
             trigger="USER"
             before_script=""
             after_script="">
  <action url="" category="workflow">Publish</action>
  <guard>
    <guard-role>Reviewer</guard-role>
    <guard-expression>python:path('context/@@get_readiness').is_ready_for(state_change.new_state.getId())</guard-expression>
  </guard>
 </transition>
 <transition transition_id="reject"
             title="Back for revision"
             new_state="draft"
             trigger="USER"
             before_script=""
             after_script="">
  <action url="" category="workflow">Back for revision</action>
  <guard>
    <guard-role>Manager</guard-role>
    <guard-role>WebReviewer</guard-role>
    <guard-role>Reviewer</guard-role>
    <guard-role>Editor</guard-role>
  </guard>
 </transition>
 <transition transition_id="retract"
             title="Retract"
             new_state="retracted"
             trigger="USER"
             before_script=""
             after_script="">
  <action url="" category="workflow">Retract</action>
  <guard>
    <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="show"
             title="Make visible only via direct link, still hidden in listings/search"
             new_state="visible"
             trigger="USER"
             before_script=""
             after_script="">
  <action url="" category="workflow">Make visible only via direct link, still hidden in listings/search</action>
  <guard>
    <guard-role>WebReviewer</guard-role>
    <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="submitContentReview"
             title="'Submit for internal review"
             new_state="content_pending"
             trigger="USER"
             before_script=""
             after_script="">
  <action url="" category="workflow">'Submit for internal review</action>
  <guard>
    <guard-expression>python: here.portal_type in  ['Data', 'EEAFigure'] and here.Language() == 'en'</guard-expression>
  </guard>
 </transition>
 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <!-- We dont use workflow scripts any more, we use subscribers -->
</dc-workflow>
